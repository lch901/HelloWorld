package dao;

import java.sql.Connection;
import java.sql.PreparedStatement;

import vo.MemberVo;

public class MemberDAO {
	public void insertMember(MemberVo vo){
		Connection con=null;
		PreparedStatement ps=null;
		
		try {
			con=DAO.getCon();
			ps=con.prepareStatement(" insert into t_member(i_member,mid,mpw,nm,sex)values((select nvl(max(i_member),0)+1,?,?,?,?) ");
			ps.setNString(1, vo.getMid());
			ps.setNString(2, vo.getMpw());
			ps.setNString(3, vo.getNm());
			ps.setNInt(4, vo.getSex());
			
			
		}catch(Exception e) {
			e.printStackTrace();
		}
	}
}
